@{
    ViewData["Title"] = "Home Page";
}

<h1 class="text-center">
    Lake Simcoe Lakefront Resort
</h1>

<div id="carousel" class="carousel slide pt-3" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carousel" data-slide-to="0" class="active"></li>
        <li data-target="#carousel" data-slide-to="1"></li>
        <li data-target="#carousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/img/Header1.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/img/Header2.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/img/Header3.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row justify-content-md-around pt-5">
    <div class="col-auto">
        <div class="card" style="width: 22rem">
            <img class="card-img-top" src="~/img/volleyball.jpg" alt="Card image">
            <div class="card-body">
                <h5 class="card-title">Beach Volleyball</h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            </div>
        </div>
    </div>
    <div class="col-auto">
        <div class="card" style="width: 22rem">
            <img class="card-img-top" src="~/img/swimmingpool.jpg" alt="Card image">
            <div class="card-body">
                <h5 class="card-title">Future Expansions</h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            </div>
        </div>
    </div>
    <div class="col-auto">
        <div class="card" style="width: 22rem">
            <img class="card-img-top" src="~/img/hotelroom.jpg" alt="Card image">
            <div class="card-body">
                <h5 class="card-title">Reserve now!</h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <div class="text-center">
                    <a class="btn btn-primary" asp-area="" asp-controller="Rooms" asp-action="Index">Reserve a Room</a>
                </div>
            </div>
        </div>
    </div>
</div>